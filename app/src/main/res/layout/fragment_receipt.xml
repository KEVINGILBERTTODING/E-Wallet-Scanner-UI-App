<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fragment.Fragment_receipt">

    <View
        android:layout_width="match_parent"
        android:background="@color/card"
        android:layout_height="@dimen/_200sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/ic_back" />

                <ImageButton
                    android:id="@+id/btn_send"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_send" />

            </RelativeLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/relative_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/payment_recepit"
                    android:padding="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/popsem"
                            android:text="Transfer was successful"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/popmed"
                            android:text="You earned 100 points"
                            android:textSize="@dimen/_7sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_50sdp"
                            app:cardBackgroundColor="#BCBCBC"
                            app:cardCornerRadius="@dimen/_20sdp">

                            <TextView
                                android:id="@+id/tv_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/popsem"
                                android:gravity="center_horizontal"
                                android:text="Value"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_18sdp" />

                            <TextView
                                android:id="@+id/tv_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_value"
                                android:fontFamily="@font/popmed"
                                android:gravity="center_horizontal"
                                android:text="You paid"
                                android:textSize="@dimen/_8sdp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/popmed"
                                android:text="From"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_7ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/popmed"
                                android:text="Digital Payment"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_7ssp" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tv_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:fontFamily="@font/popmed"
                                android:text="Username"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_toRightOf="@id/tv_username"
                                android:fontFamily="@font/popmed"
                                android:gravity="end"
                                android:text="@string/card_number"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_9ssp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/popmed"
                                android:text="To"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_7ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/popmed"
                                android:text="Bill Payment"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_7ssp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tv_product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:fontFamily="@font/popmed"
                                android:text="Product name"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/tv_product_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_toRightOf="@id/tv_product_name"
                                android:fontFamily="@font/popmed"
                                android:gravity="end"
                                android:text="Product_id"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_8ssp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/popmed"
                                android:text="Date"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_7ssp" />

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/popmed"
                                android:text="Date"
                                android:textColor="@color/background"
                                android:textSize="@dimen/_7ssp" />


                        </RelativeLayout>


                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/popmed"
                        android:text="Go Back To Home"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_10sdp"
                        app:backgroundTint="@color/blue"
                        app:cornerRadius="@dimen/_10sdp" />


                </RelativeLayout>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/sad_animation"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_centerHorizontal="true"
                    app:lottie_autoPlay="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/success" />





            </RelativeLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/conrats_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/congrats2" />





</RelativeLayout>